{
  "AzureAI": {
    "Endpoint": "https://your-endpoint.azure.com/",
    "SubscriptionKey": "<REPLACE_WITH_KEY>"
  },
  "Redis": {
    "ConnectionString": "<REPLACE_WITH_CONNECTION_STRING>"
  },
  "Ocr": {
    "Engine": "Aspose",
    "AsposeLicensePath": "Aspose.Total.NET.lic",
    "EnableCaching": true,
    "CacheDurationDays": 30
  },
  "FileMonitor": {
    "IncomingFolder": "incoming",
    "StagingFolder": "staging",
    "ProcessingFolder": "processing",
    "ProcessedFolder": "processed",
    "FailedFolder": "failed",
    "StateFolder": "state",
    "PollIntervalSeconds": 5,
    "FileStableSeconds": 3,
    "MaxDegreeOfParallelism": 2,
    "MaxRetries": 3,
    "RetryBaseDelayMs": 1000,
    "UseFileSystemWatcher": false
  },
  "Schema": {
    "InvoiceSchemaPath": "src/invoice_schema.json"
  }
}
